<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/enable_bt_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/enable_bt_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_settings_bluetooth"
            android:background="?android:attr/selectableItemBackground"
            android:text="Connect to HPM"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lock_unlock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/lock_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableLeft="@mipmap/lock_logo"
            android:background="?android:attr/selectableItemBackground"
            android:text="Lock"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />
        </LinearLayout>

        <Button
            android:id="@+id/unlock_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableLeft="@mipmap/unlock_logo"
            android:background="?android:attr/selectableItemBackground"
            android:text="Unlock"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>