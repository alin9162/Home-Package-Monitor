    <LinearLayout
        android:id="@+id/enable_bt_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/enable_bt_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_settings_bluetooth"
            android:paddingLeft="10dp"
            android:text="Connect to HPM" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lock_unlock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/lock_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/lock_logo"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Lock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />
        </LinearLayout>

        <Button
            android:id="@+id/unlock_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/unlock_logo"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Unlock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>